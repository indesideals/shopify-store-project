<style>
/* Shop by Category Page Styles */
.shop-by-category-page {
  padding: 60px 0;
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  min-height: 100vh;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

.simple-page-title {
  font-size: 2rem;
  font-weight: 700;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0 0 1rem 0;
  text-align: center;
}

.category-section {
  margin-bottom: 40px;
}

.category-header {
  margin-bottom: 20px;
  padding: 0 10px;
}

.category-title {
  font-size: 2.5rem;
  font-weight: 700;
  font-family: 'Poppins', sans-serif;
  color: #1f2937;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 10px;
}

/* View All Card */
.view-all-card {
  flex: 0 0 200px;
  height: 320px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  border: 2px dashed #e5e7eb;
  border-radius: 16px;
  transition: all 0.3s ease;
  scroll-snap-align: start;
}

.view-all-card:hover {
  border-color: #667eea;
  background: linear-gradient(135deg, #f0f4ff 0%, #ffffff 100%);
  transform: translateY(-2px);
}

.view-all-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 12px 24px;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 600;
  font-family: 'Poppins', sans-serif;
  font-size: 0.9rem;
  transition: all 0.3s ease;
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.3);
}

.view-all-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
  color: white;
  text-decoration: none;
}

.products-scroll-container {
  position: relative;
  overflow: hidden;
}

.products-scroll {
  display: flex;
  gap: 20px;
  overflow-x: auto;
  padding: 10px 0 20px 0;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
  scroll-padding: 0 20px;
}

.products-scroll::-webkit-scrollbar {
  display: none;
}

.product-card {
  flex: 0 0 200px;
  background: white;
  border-radius: 16px;
  box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1px solid #e5e7eb;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 320px;
  position: relative;
  scroll-snap-align: start;
}

.product-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  border-color: #6366f1;
}

.product-image-container {
  position: relative;
  background: white;
  height: 200px;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-card:hover .product-image {
  transform: scale(1.05);
}

.product-info {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  justify-content: space-between;
  background: white;
  min-height: 160px;
}

.product-title {
  margin: 0 0 0.4rem 0;
  font-size: 0.9rem;
  font-weight: 600;
  height: 1.8rem;
  display: flex;
  align-items: flex-start;
  text-align: left;
  overflow: hidden;
  line-height: 1.2;
}

.product-title a {
  color: inherit;
  text-decoration: none;
}

.product-title a:hover {
  color: #6366f1;
}

.product-price {
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex-wrap: wrap;
  min-height: 2rem;
  justify-content: flex-start;
}

.original-price {
  text-decoration: line-through;
  color: #9ca3af;
  font-size: 0.9rem;
}

.sale-price {
  font-weight: 700;
  color: #667eea;
  font-size: 1.1rem;
}

.discount-pill {
  display: inline-block;
  background: #dc2626;
  color: #fff;
  padding: 0.15rem 0.5rem;
  border-radius: 999px;
  font-size: 0.72rem;
  font-weight: 700;
  line-height: 1;
}

.add-to-cart-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 4px 8px;
  border-radius: 6px;
  font-size: 10px;
  font-weight: 500;
  font-family: 'Poppins', sans-serif;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-transform: uppercase;
  letter-spacing: 0.2px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 3px;
  box-shadow: 0 1px 3px rgba(99, 102, 241, 0.2);
  margin-top: auto;
  min-height: 28px;
  max-height: 32px;
}

.add-to-cart-btn:hover {
  background: linear-gradient(135deg, #4f46e5, #7c3aed);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(99, 102, 241, 0.4);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .shop-by-category-page {
    padding: 40px 0;
  }
  
  .page-title {
    font-size: 2.5rem;
  }
  
  .page-description {
    font-size: 1rem;
  }
  
  .category-title {
    font-size: 2rem;
  }
  
  .category-header {
    flex-direction: column;
    gap: 15px;
    text-align: center;
  }
  
  .product-card {
    flex: 0 0 250px;
  }
  
  .product-image-container {
    height: 180px;
  }
  
  .product-image {
    height: 180px;
  }
  
  .product-info {
    padding: 12px 16px 16px;
  }
}

@media (max-width: 480px) {
  .page-title {
    font-size: 2rem;
  }
  
  .category-title {
    font-size: 1.5rem;
  }
  
  .product-card {
    flex: 0 0 220px;
  }
  
  .product-image-container {
    height: 160px;
  }
  
  .product-image {
    height: 160px;
  }
  
  .product-info {
    padding: 8px 12px 12px;
  }
}
</style>