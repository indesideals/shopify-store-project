{% comment %}
  Shop by Category Page Template
  Shows all 6 categories with horizontal scrolling product sections
{% endcomment %}

<div class="shop-by-category-page">
  <div class="container">
    <!-- Simple Page Title -->
    <h1 class="simple-page-title">Shop by Category</h1>

    <!-- Best Sellers Category -->
    {% assign best_sellers_collection = collections['best-sellers'] %}
    {% if best_sellers_collection.products.size > 0 %}
      <section class="category-section">
        <div class="category-header">
          <h3 class="category-title">‚≠ê Best Sellers</h3>
        </div>
        <div class="products-scroll-container">
          <div class="products-scroll">
            {% for product in best_sellers_collection.products limit: 10 %}
              <div class="product-card">
                <div class="product-image-container">
                  <a href="{{ product.url }}">
                    <img src="{{ product.featured_image | image_url: width: 300 }}" 
                         alt="{{ product.title }}" 
                         class="product-image"
                         loading="lazy">
                  </a>
                </div>
                <div class="product-info">
                  <h3 class="product-title">
                    <a href="{{ product.url }}">{{ product.title }}</a>
                  </h3>
                  <div class="product-price">
                    {% assign selling_price = product.price | divided_by: 100 | round %}
                    {% assign compare_price = selling_price | divided_by: 0.6 | round %}
                    <span class="original-price">‚Çπ{{ compare_price }}</span>
                    <span class="sale-price">‚Çπ{{ selling_price }}</span>
                    <span class="discount-pill">40% OFF</span>
                  </div>
                  <button type="button" class="add-to-cart-btn" 
                          onclick="addToCartDirect('{{ product.id }}', '{{ product.selected_or_first_available_variant.id }}', '{{ product.title | escape }}', '{{ product.price | divided_by: 100.0 }}', '{{ product.featured_image | image_url: width: 300 }}', '{{ product.url }}')"
                          data-variant-id="{{ product.selected_or_first_available_variant.id }}" 
                          data-product-title="{{ product.title | escape }}">
                    Add to Cart
                  </button>
                </div>
              </div>
            {% endfor %}
            <!-- View All Button at the end -->
            <div class="view-all-card">
              <a href="{{ best_sellers_collection.url }}" class="view-all-btn">View All</a>
