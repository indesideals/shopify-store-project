{% stylesheet %}
/* Category Scroll Section */
.category-scroll-section {
  background: #ffffff;
  padding: 1rem 0 0.5rem 0;
  margin: 0;
}

.category-scroll-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
}

.category-scroll-wrapper {
  display: flex;
  align-items: center;
  overflow: hidden;
}

.category-scroll {
  display: flex;
  gap: 1.5rem;
  overflow-x: auto;
  scroll-behavior: smooth;
  padding: 1rem 0;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.category-scroll::-webkit-scrollbar {
  display: none;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.75rem;
  text-decoration: none;
  color: inherit;
  transition: all 0.3s ease;
  flex-shrink: 0;
  min-width: 80px;
}

.category-item:hover {
  transform: translateY(-4px);
}

.category-circle {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  transition: all 0.3s ease;
  border: 2px solid transparent;
  position: relative;
  overflow: hidden;
}

.category-item:hover .category-circle {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transform: scale(1.05);
  box-shadow: 0 8px 24px rgba(102, 126, 234, 0.3);
}

.category-icon-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
  image-rendering: -webkit-optimize-contrast;
  image-rendering: crisp-edges;
  image-rendering: pixelated;
  image-rendering: high-quality;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
}

.category-item:hover .category-circle::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0.1) 100%);
  border-radius: 50%;
}

.category-text {
  font-size: 0.85rem;
  font-weight: 600;
  color: #374151;
  text-align: center;
  line-height: 1.2;
  transition: color 0.3s ease;
}

.category-item:hover .category-text {
  color: #667eea;
}

/* Slide For More Indicator */
.slide-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
  margin: 2px 0 0 auto;
  width: fit-content;
  cursor: pointer;
  transition: all 0.3s ease;
}

.slide-indicator:hover {
  opacity: 0.8;
}

.slide-text {
  font-size: 0.6rem;
  font-weight: 600;
  color: #667eea;
  font-family: 'Poppins', sans-serif;
  white-space: nowrap;
}

.slide-arrow {
  color: #667eea;
  animation: slideRight 1.5s ease-in-out infinite;
}

.slide-arrow svg {
  width: 6px;
  height: 6px;
}

@keyframes slideRight {
  0% {
    transform: translateX(0);
    opacity: 0.7;
  }
  50% {
    transform: translateX(4px);
    opacity: 1;
  }
  100% {
    transform: translateX(0);
    opacity: 0.7;
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .category-scroll-section {
    padding: 0.75rem 0 0.25rem 0;
  }
  
  .category-scroll-container {
    padding: 0 15px;
  }
  
  .scroll-arrow {
    width: 35px;
    height: 35px;
  }
  
  .category-circle {
    width: 70px;
    height: 70px;
    font-size: 1.75rem;
  }
  
  .category-text {
    font-size: 0.8rem;
  }
  
  .category-scroll {
    gap: 1rem;
  }
}

@media (max-width: 480px) {
  .category-scroll-wrapper {
    gap: 0.5rem;
  }
  
  .scroll-arrow {
    width: 30px;
    height: 30px;
  }
  
  .category-circle {
    width: 60px;
    height: 60px;
    font-size: 1.5rem;
  }
  
  .category-text {
    font-size: 0.75rem;
  }
  
  .category-scroll {
    gap: 0.75rem;
  }
}
{% endstylesheet %}

